{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/deps/pksav/include",
                "${workspaceFolder}/../raylib/src/"
            ],
            "defines": [
                "PROJECT_VERSION",  // From Makefile
                "PROJECT_VERSION_TYPE",
                "CI_BUILD"
            ],
            "macFrameworkPath": [
                "/Applications/Xcode.app/Contents/Developer/Platforms/MacOSX.platform/Developer/SDKs/MacOSX.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c17",
            "cppStandard": "c++17",
            "intelliSenseMode": "macos-gcc-arm",
            "configurationProvider": "ms-vscode.makefile-tools"
        },
        {
            "name": "linux",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/include",
                "${workspaceFolder}/deps/pksav/include",
                "${workspaceFolder}/deps/raylib/src",
                "${workspaceFolder}/deps/pksav/build/include/pksav"
            ],
            "defines": [
                "PROJECT_VERSION",
                "PROJECT_VERSION_TYPE",
                "CI_BUILD"
            ],
            "compilerPath": "/usr/bin/gcc",
            "cStandard": "c11",
            "cppStandard": "c++17",
            "intelliSenseMode": "linux-gcc-x64"
        }
    ],
    "version": 4
}